<div class="card">
  <div class="position-relative lazyload-box">
    <img class="card-img-top {{ lazy ? lazy }}" src="{{ lazy ? 'data:image/gif;base64,' : thumb }}" data-src="{{ thumb }}" alt="{{ name }}">
    <div class="card-img-overlay">
      <div class="d-flex align-items-start">
        {% if procent %}<span class="card-procent">{{ procent }}</span>{% endif %}
        <button class="btn btn-light btn-sm card-btn-icon ml-auto position-relative z-index-2" type="button">{{ svg.icon('rate', '') }}</button>
      </div>
    </div>
  </div>
  <div class="card-body text-center text-md-left">
    <div class="text-muted mb-1">{{ category }}</div>
    <div class="card-title"><a class="card-link h4 d-inline stretched-link text-dark text-decoration-none" href="{{ href }}" rel="nofollow">{{ name }}</a></div>
    <div class="h4 mb-0">
      {% if special %}<span class="text-muted line-througt">{{ special }}</span>{% endif %}
      {{ price }}
    </div>
  </div>
</div>
